{
  "name": "esbuild-postcss",
  "version": "0.0.4",
  "description": "Seamless integration between esbuild and PostCSS",
  "keywords": [
    "esbuild",
    "plugin",
    "postcss"
  ],
  "repository": "git@github.com:karolis-sh/esbuild-postcss.git",
  "license": "MIT",
  "author": "Karolis Å arapnickis",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rm -rf lib",
    "dev": "yarn build:js --watch",
    "build": "run-p build:*",
    "build:js": "esbuild src/index.ts --outdir=lib --platform=node --format=cjs",
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "commit": "npx cz",
    "format": "run-p format:*",
    "format:package.json": "sort-package-json package.json",
    "format:prettier": "prettier --write '**/*.*'",
    "lint": "run-p lint:*",
    "lint:js": "eslint . --cache --ignore-path .gitignore",
    "lint:md": "markdownlint-cli2 '**/*.md' '!node_modules' '!**/node_modules' '!**/CHANGELOG.md'",
    "lint:types": "tsc --noEmit",
    "test": "jest",
    "qa": "run-p lint test",
    "release": "yarn && run-s clean build qa && standard-version --no-verify && git push --follow-tags --no-verify && npm publish",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/package.json": "sort-package-json",
    "*.{js,ts}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "postcss-load-config": "^3.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@k.sh/eslint-config": "^1.21.2",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.12.15",
    "esbuild-jest": "^0.5.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": ">=10",
    "markdownlint-cli2": "^0.1.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "postcss-custom-properties": "^11.0.0",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.5",
    "pretty-quick": "^3.1.1",
    "sort-package-json": "^1.50.0",
    "standard-version": "^9.3.0",
    "sugarss": "^4.0.1",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "esbuild": "*",
    "postcss": "^8.0.0"
  },
  "volta": {
    "node": "14.17.3",
    "yarn": "1.22.10"
  }
}
